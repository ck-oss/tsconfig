{
  "name": "@ck-oss/tsconfig",
  "version": "0.0.0",
  "private": false,
  "description": "CK OSS Typescript Configuration",
  "keywords": [
    "typescript",
    "hono",
    "cloudflare",
    "next",
    "node",
    "react"
  ],
  "homepage": "https://github.com/ck-oss/tsconfig#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ck-oss/tsconfig.git"
  },
  "license": "MIT",
  "author": {
    "name": "ckasidis",
    "url": "https://github.com/ckasidis"
  },
  "files": [
    "./base.json",
    "./hono-cloudflare.json",
    "./next.json",
    "./node-library.json",
    "./react-library.json"
  ],
  "scripts": {
    "commit": "cz",
    "format:check": "prettier --check \"**/*.{html,css,scss,js,cjs,mjs,jsx,ts,tsx,md,markdown,mdx,json,yml,yaml,toml,gql,graphql}\"",
    "format:write": "prettier --write \"**/*.{html,css,scss,js,cjs,mjs,jsx,ts,tsx,md,markdown,mdx,json,yml,yaml,toml,gql,graphql}\"",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,css,scss,js,cjs,mjs,jsx,ts,tsx,md,markdown,mdx,json,yml,yaml,toml,gql,graphql}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": "@ck-oss/prettier-config",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-tailwindcss": "^0.5.4"
  },
  "devDependencies": {
    "@ck-oss/prettier-config": "^1.0.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
